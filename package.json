{
  "name": "agent-native-kanban",
  "displayName": "Agent Native Abstraction Layer for Beads",
  "description": "Kanban board for Agent Native issues stored in .beads SQLite",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebcook-ctrl/agent.native.activity.layer.beads.git"
  },
  "version": "0.0.3",
  "publisher": "AgentNativeAbstractionLayer",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:beadsKanban.openBoard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beadsKanban.openBoard",
        "title": "Beads: Open Kanban Board"
      },
      {
        "command": "beadsKanban.showDaemonActions",
        "title": "Beads: Manage Daemon"
      }
    ],
    "configuration": {
      "title": "Agent Native Abstraction Layer for Beads",
      "properties": {
        "beadsKanban.readOnly": {
          "type": "boolean",
          "default": false,
          "description": "If true, disables write operations (create/move/update)."
        },
        "beadsKanban.useDaemonAdapter": {
          "type": "boolean",
          "default": false,
          "description": "If true, use the bd CLI daemon adapter instead of the in-memory SQLite adapter. Requires bd daemon to be running."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p . && npm run copy-deps",
    "copy-deps": "cp node_modules/sql.js/dist/sql-wasm.wasm out/ && cp node_modules/dompurify/dist/purify.min.js media/",
    "watch": "tsc -watch -p .",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "test": "vscode-test",
    "test:watch": "vscode-test --watch",
    "test:coverage": "c8 npm run test"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/chai": "^4.3.20",
    "@types/dompurify": "^3.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.30",
    "@types/sinon": "^17.0.4",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.5.2",
    "c8": "^9.1.0",
    "chai": "^4.5.0",
    "glob": "^10.5.0",
    "mocha": "^10.8.2",
    "node-gyp": "^12.1.0",
    "sinon": "^17.0.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@types/sql.js": "^1.4.9",
    "dompurify": "^3.3.1",
    "sql.js": "^1.13.0",
    "uuid": "^10.0.0",
    "zod": "^4.3.4"
  }
}
